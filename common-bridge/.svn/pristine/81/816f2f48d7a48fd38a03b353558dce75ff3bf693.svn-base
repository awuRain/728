$('.J_Get').on('tap', function(){
    Bridge.Loader.get({
        url: Bridge.host + '/business/ajax/ticket/getsidbynuomi',
        dataType: 'json',
        data: {
            city_code: 100010000
        },
        success: function(res){
            alert('返回城市数据：' + res.data.name);
        },
        fail: function(){
            alert('失败啦');
        }
    });
});

$('.J_Jsonp').on('tap', function(){
