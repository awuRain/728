$('.J_Wechatshare').on('tap', function(){
    if(Bridge.isWechat()) {
        Bridge.initShare({
            title: "分享测试",
            content: "分享内容测试",
            imgUrl: "http://newicafe.baidu.com/resources/common/widget/backToTop/img/help-icon.png",
            url: "http://www.baidu.com",
            success: function () {
                alert('分享成功啦！');
            },
            cancel: function () {
                alert('取消分享');
            }
        });
        alert('分享内容修改啦，快去分享看看吧！');
    }
    else {
        alert('需要在微信扫码使用此功能');
    }
});